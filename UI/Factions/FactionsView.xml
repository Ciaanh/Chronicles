<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <Frame name="FactionsView" parent="MainFrame" hidden="true">
        <Size x="740" y="540"/>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>

        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Title" inherits="ChroniclesFontLarge" justifyH="CENTER">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-10"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame name="FactionList" parentKey="List" inherits="BackdropTemplate">
                <Size x="200" y="530"/>
                <Anchors>
                    <Anchor point="TOPLEFT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" file="Interface\QuestionFrame\question-background" horizTile="true" vertTile="true">
                            <Anchors>
                                <Anchor point="TOP" y="-5"/>
                                <Anchor point="BOTTOM" y="5"/>
                                <Anchor point="LEFT" x="5"/>
                                <Anchor point="RIGHT" x="-5"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>

                <Frames>
                    <Frame name="FactionsListScrollFrame" parentKey="ScrollFrame">
                        <Size x="150" y="530" />
                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                        </Anchors>
                        <Frames>
                            <Frame name="FactionsListBlock1" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOPLEFT" x="15" y="-15" />
                                </Anchors>
                            </Frame>
                            <Frame name="FactionsListBlock2" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="FactionsListBlock1" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="FactionsListBlock3" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="FactionsListBlock2" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="FactionsListBlock4" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="FactionsListBlock3" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="FactionsListBlock5" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="FactionsListBlock4" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="FactionsListBlock6" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="FactionsListBlock5" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="FactionsListBlock7" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="FactionsListBlock6" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="FactionsListBlock8" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="FactionsListBlock7" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="FactionsListBlock9" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="FactionsListBlock8" y="-5"/>
                                </Anchors>
                            </Frame>
                        </Frames>

                        <Scripts>
                            <OnMouseWheel>
                                FactionsListScrollFrame_OnMouseWheel(self, delta)
                            </OnMouseWheel>
                        </Scripts>
                    </Frame>

                    <Slider name="FactionsListScrollBar" parentKey="ScrollBar" inherits="MinimalScrollBarTemplate">
                        <Size x="20" y="470"/>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="FactionsListScrollFrame" x="15" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);

                                self.ScrollUpButton:SetScript(
                                    "OnClick",
                                    function(source) FactionsListPreviousButton_OnClick(source) end
                                );

                                self.ScrollDownButton:SetScript(
                                    "OnClick",
                                    function(source) FactionsListNextButton_OnClick(source) end
                                );

                                self.scrollStep = 1;
                            </OnLoad>
                            <OnValueChanged>
                                DisplayFactionsList(adjust_value(value, self.scrollStep));
                            </OnValueChanged>
                        </Scripts>
                    </Slider>
                </Frames>
            </Frame>

            <Frame name="FactionDetails" parentKey="Details" inherits="BackdropTemplate">
                <Size x="540" y="530"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <!-- CORNERS -->
                        <Texture parentKey="BorderTopLeft" file="Interface\QuestionFrame\Question-Main">
                            <Size x="209" y="158"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="0"/>
                            </Anchors>
                            <TexCoords left="0.00195313" right="0.41015625" top="0.61718750" bottom="0.92578125"/>
                        </Texture>
                        <Texture parentKey="BorderTopRight" file="Interface\QuestionFrame\Question-Main">
                            <Size x="209" y="158"/>
                            <Anchors>
                                <Anchor point="TOPRIGHT" x="0" y="0"/>
                            </Anchors>
                            <TexCoords left="0.41406250" right="0.82031250" top="0.61718750" bottom="0.92578125"/>
                        </Texture>
                        <Texture parentKey="BorderBottomLeft" file="Interface\QuestionFrame\Question-Main">
                            <Size x="209" y="158"/>
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" x="0" y="0"/>
                            </Anchors>
                            <TexCoords left="0.00195313" right="0.41015625" top="0.30468750" bottom="0.61328125"/>
                        </Texture>
                        <Texture parentKey="BorderBottomRight" file="Interface\QuestionFrame\Question-Main">
                            <Size x="209" y="158"/>
                            <Anchors>
                                <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                            </Anchors>
                            <TexCoords left="0.41406250" right="0.82226563" top="0.30468750" bottom="0.61328125"/>
                        </Texture>

                        <!-- BORDERS -->
                        <Texture parentKey="BorderLeft" file="Interface\QuestionFrame\Question-Vtile" vertTile="true">
                            <Size x="93" y="256"/>
                            <Anchors>
                                <Anchor point="LEFT" x="2" y="0"/>
                                <Anchor point="TOP" relativeKey="$parent.BorderTopLeft" relativePoint="BOTTOM"/>
                                <Anchor point="BOTTOM" relativeKey="$parent.BorderBottomLeft" relativePoint="TOP"/>
                            </Anchors>
                            <TexCoords left="0.00390625" right="0.36718750" top="0.00000000" bottom="1.00000000"/>
                        </Texture>
                        <Texture parentKey="BorderRight" file="Interface\QuestionFrame\Question-Vtile" vertTile="true">
                            <Size x="94" y="256"/>
                            <Anchors>
                                <Anchor point="RIGHT" x="0" y="0"/>
                                <Anchor point="TOP" relativeKey="$parent.BorderTopRight" relativePoint="BOTTOM"/>
                                <Anchor point="BOTTOM" relativeKey="$parent.BorderBottomRight" relativePoint="TOP"/>
                            </Anchors>
                            <TexCoords left="0.37500000" right="0.74218750" top="0.00000000" bottom="1.00000000"/>
                        </Texture>
                        <Texture parentKey="BottomBorder" file="Interface\QuestionFrame\Question-HTile" horizTile="true">
                            <Size x="256" y="86"/>
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativeKey="$parent.BorderBottomLeft" relativePoint="BOTTOMRIGHT" y="2"/>
                                <Anchor point="BOTTOMRIGHT" relativeKey="$parent.BorderBottomRight" relativePoint="BOTTOMLEFT" y="2"/>
                            </Anchors>
                            <TexCoords left="0.00000000" right="1.00000000" top="0.17187500" bottom="0.33984375"/>
                        </Texture>
                        <Texture parentKey="TopBorder" file="Interface\QuestionFrame\Question-HTile" horizTile="true">
                            <Size x="256" y="91"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent.BorderTopLeft" relativePoint="TOPRIGHT" y="-1"/>
                                <Anchor point="TOPRIGHT" relativeKey="$parent.BorderTopRight" relativePoint="TOPLEFT" y="-1"/>
                            </Anchors>
                            <TexCoords left="0.00000000" right="1.00000000" top="0.34375000" bottom="0.52148438"/>
                        </Texture>
                    </Layer>
                    <Layer level="ARTWORK" textureSubLevel="2">
                        <Texture parentKey="LeftHide" inherits="QuestChoiceLeftHide">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent.BorderTopLeft" relativePoint="BOTTOMLEFT" x="10" y="10"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="LeftHide2" inherits="QuestChoiceLeftHide">
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativeKey="$parent.BorderBottomLeft" relativePoint="TOPLEFT" x="10" y="-10"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="RightHide" inherits="QuestChoiceRightHide">
                            <Anchors>
                                <Anchor point="TOPRIGHT" relativeKey="$parent.BorderTopRight" relativePoint="BOTTOMRIGHT" x="-8" y="8"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="RightHide2" inherits="QuestChoiceRightHide">
                            <Anchors>
                                <Anchor point="BOTTOMRIGHT" relativeKey="$parent.BorderBottomRight" relativePoint="TOPRIGHT" x="-10" y="-10"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="BottomHide" inherits="QuestChoiceBottomHide">
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativeKey="$parent.BorderBottomLeft" relativePoint="BOTTOMRIGHT" x="-10" y="11"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="BottomHide2" inherits="QuestChoiceBottomHide">
                            <Anchors>
                                <Anchor point="BOTTOMRIGHT" relativeKey="$parent.BorderBottomRight" relativePoint="BOTTOMLEFT" x="15" y="11"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="bTile" file="Interface\QuestionFrame\question-background" vertTile="true" horizTile="true">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="20" y="-20"/>
                                <Anchor point="BOTTOMRIGHT" x="-20" y="20"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Frames>

                    <Frame name="FactionDetailsTitleContainer">
                        <Size x="600" y="20"/>
                        <Anchors>
                            <Anchor point="TOP" x="0" y="-15"/>
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString name="FactionTitle" inherits="EventDescriptionTitleFont" justifyH="CENTER">
                                    <Anchors>
                                        <Anchor point="CENTER"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                    </Frame>

                    <Frame name="FactionTimelineContainer">
                        <Size x="50" y="20"/>
                        <Anchors>
                            <Anchor point="TOPRIGHT" x="-40" y="-25"/>
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString name="FactionTimeline" inherits="EventDescriptionDatesFont" justifyH="CENTER"/>
                            </Layer>
                        </Layers>
                    </Frame>

                    <ScrollFrame parentKey="ScrollFrame" inherits="UIPanelScrollFrameCodeTemplate">
                        <Anchors>
                            <Anchor point="TOP" x="0" y="-40"/>
                            <Anchor point="RIGHT" x="-40" y="0"/>
                            <Anchor point="LEFT" x="50" y="0"/>
                            <Anchor point="BOTTOM" x="0" y="42"/>
                        </Anchors>
                        <Frames>
                            <Slider name="$parentScrollBar" parentKey="ScrollBar" inherits="MinimalScrollBarTemplate">
                                <Anchors>
                                    <Anchor point="TOPRIGHT" x="0" y="-17"/>
                                    <Anchor point="BOTTOMRIGHT" x="0" y="17"/>
                                </Anchors>
                                <Scripts>
                                    <OnLoad>
								        self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);
                                    </OnLoad>
                                </Scripts>
                            </Slider>
                        </Frames>
                        <ScrollChild>
                            <Frame parentKey="ScrollChild">
                                <Size x="10" y="10"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" x="0" y="0"/>
                                </Anchors>

                                <Frames>
                                    <SimpleHTML parentKey="HTML" name="FactionDescriptionHTML" justifyH="LEFT">
                                        <Size x="470" y="300"/>
                                        <Anchors>
                                            <Anchor point="TOPLEFT" x="5" y="-5"/>
                                        </Anchors>
                                        <FontString inherits="EventDescriptionFont"/>
                                    </SimpleHTML>
                                </Frames>
                            </Frame>
                        </ScrollChild>
                    </ScrollFrame>
                </Frames>
            </Frame>
        </Frames>
    </Frame>
</Ui>