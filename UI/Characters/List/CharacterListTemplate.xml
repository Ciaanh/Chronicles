<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <Script file="CharacterListTemplate.lua" />

    <!-- Character List Item Template -->
    <Button name="CharacterListItemTemplate" mixin="CharacterListItemMixin" virtual="true">
        <Size y="110"/>
        <KeyValues>
            <KeyValue key="textureHeight" value="80" type="number"/>
        </KeyValues>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Side" file="Interface\AddOns\Chronicles\Art\Bookmark-side">
                    <Anchors>
                        <Anchor point="RIGHT" relativePoint="LEFT" x="0" y="0"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="Content" file="Interface\AddOns\Chronicles\Art\Bookmark-content">
                    <Anchors>
                        <Anchor point="TOPLEFT" y="-15"/>
                        <Anchor point="BOTTOMRIGHT" y="15"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="Text" inherits="SystemFont_Med3" setAllPoints="true" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="5" y="-15" />
                        <Anchor point="BOTTOMRIGHT" x="-5" y="15" />
                    </Anchors>
                    <Color color="WHITE_FONT_COLOR" />
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnClick method="OnClick"/>
        </Scripts>
    </Button>

    <Frame name="CharacterListTemplate" mixin="CharacterListMixin" virtual="true">
        <Size x="1200" y="125" />
        <KeyValues>
            <KeyValue key="layoutType" value="TooltipDefaultDarkLayout" type="string" />
        </KeyValues>
        <Frames>
            <Button parentKey="Previous">
                <Size x="50" y="50" />
                <Anchors>
                    <Anchor point="LEFT" x="10" y="10" />
                </Anchors>
                <NormalTexture atlas="CovenantSanctum-Renown-Arrow" useAtlasSize="true">
                    <Anchors>
                        <Anchor point="CENTER" y="1"/>
                    </Anchors>
                </NormalTexture>
                <PushedTexture atlas="CovenantSanctum-Renown-Arrow-Depressed" useAtlasSize="true">
                    <Anchors>
                        <Anchor point="CENTER" y="1"/>
                    </Anchors>
                </PushedTexture>
                <DisabledTexture atlas="CovenantSanctum-Renown-Arrow-Disabled" useAtlasSize="true">
                    <Anchors>
                        <Anchor point="CENTER" y="1"/>
                    </Anchors>
                </DisabledTexture>
                <HighlightTexture atlas="CovenantSanctum-Renown-Arrow-Hover" useAtlasSize="true" alphaMode="ADD">
                    <Anchors>
                        <Anchor point="CENTER" y="1"/>
                    </Anchors>
                </HighlightTexture>
            </Button>

            <Button parentKey="Next">
                <Size x="50" y="50" />
                <Anchors>
                    <Anchor point="RIGHT" x="-10" y="10" />
                </Anchors>
                <NormalTexture atlas="CovenantSanctum-Renown-Arrow" useAtlasSize="true">
                    <Anchors>
                        <Anchor point="CENTER" y="1"/>
                    </Anchors>
                </NormalTexture>
                <PushedTexture atlas="CovenantSanctum-Renown-Arrow-Depressed" useAtlasSize="true">
                    <Anchors>
                        <Anchor point="CENTER" y="1"/>
                    </Anchors>
                </PushedTexture>
                <DisabledTexture atlas="CovenantSanctum-Renown-Arrow-Disabled" useAtlasSize="true">
                    <Anchors>
                        <Anchor point="CENTER" y="1"/>
                    </Anchors>
                </DisabledTexture>
                <HighlightTexture atlas="CovenantSanctum-Renown-Arrow-Hover" useAtlasSize="true" alphaMode="ADD">
                    <Anchors>
                        <Anchor point="CENTER" y="1"/>
                    </Anchors>
                </HighlightTexture>
                <Scripts>
                    <OnLoad >
                        self:GetNormalTexture():SetTexCoord(1, 0, 0, 1)
                        self:GetHighlightTexture():SetTexCoord(1, 0, 0, 1)
                        self:GetPushedTexture():SetTexCoord(1, 0, 0, 1)
                        self:GetDisabledTexture():SetTexCoord(1, 0, 0, 1)
                    </OnLoad >
                </Scripts>
            </Button>

            <Frame parentKey="Bg" inherits="FlatPanelBackgroundTemplate" frameLevel="0">
                <Anchors>
                    <Anchor point="TOPLEFT" x="7" y="-6" />
                    <Anchor point="BOTTOMRIGHT" x="-7" y="6" />
                </Anchors>
            </Frame>
            <Frame parentKey="NineSlice" useParentLevel="true" inherits="NineSlicePanelTemplate" />
            <!-- Content -->
            <Frame parentKey="PagedCharacterList" inherits="PagedCondensedVerticalGridContentFrameTemplate">
                <KeyValues>
                    <KeyValue key="viewsPerPage" value="2" type="number"/>
                    <KeyValue key="autoExpandHeaders" value="true" type="boolean"/>
                    <KeyValue key="xPadding" value="10" type="number"/>
                    <KeyValue key="columnsPerRow" value="1" type="number"/>
                    <KeyValue key="autoExpandElements" value="true" type="boolean"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="TOPLEFT" x="80" y="-10"/>
                    <Anchor point="BOTTOMRIGHT" x="-80" y="10"/>
                </Anchors>
                <Frames>
                    <Frame parentKey="View1" inherits="StaticGridLayoutFrame" parentArray="ViewFrames">
                        <KeyValues>
                            <KeyValue key="side" value="left" type="string"/>
                        </KeyValues>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="-10"/>
                            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT" x="480" y="10"/>
                        </Anchors>
                    </Frame>

                    <Frame parentKey="View2" inherits="StaticGridLayoutFrame" parentArray="ViewFrames">
                        <KeyValues>
                            <KeyValue key="side" value="right" type="string"/>
                        </KeyValues>
                        <Anchors>
                            <Anchor point="TOPRIGHT" x="0" y="-10"/>
                            <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="-480" y="10"/>
                        </Anchors>
                    </Frame>

                    <Frame parentKey="PagingControls" inherits="EventListPagingControlsTemplate">
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" x="-25" y="-30"/>
                        </Anchors>
                        <KeyValues>
                            <KeyValue key="hideWhenSinglePage" value="true" type="boolean" />
                            <KeyValue key="fontName" value="SystemFont_Med3" type="string" />
                            <KeyValue key="fontColor" value="WHITE_FONT_COLOR" type="global" />
                            <KeyValue key="spacing" value="8" type="number"/>
                            <KeyValue key="prevPageSound" value="SOUNDKIT.IG_ABILITY_PAGE_TURN" type="global"/>
                            <KeyValue key="nextPageSound" value="SOUNDKIT.IG_ABILITY_PAGE_TURN" type="global"/>
                        </KeyValues>
                    </Frame>
                </Frames>
            </Frame>

        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <!-- <OnMouseWheel method="OnMouseWheel" /> -->
        </Scripts>
    </Frame>
</Ui>