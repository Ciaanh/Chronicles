                        <Anchor point="RIGHT" x="0" y="0"/>
                        <Anchor point="TOP" relativeKey="$parent.BorderTopRight" relativePoint="BOTTOM"/>
                        <Anchor point="BOTTOM" relativeKey="$parent.BorderBottomRight" relativePoint="TOP"/>
