<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <Frame name="OtherView" parent="MainFrame" hidden="true">
        <Size x="800" y="600"/>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
    </Frame>

    <Button name="OtherViewToggle" inherits="UIPanelButtonTemplate" parent="MainFrame">
        <Size x="50" y="20"/>
        <Anchors>
            <Anchor point="BOTTOM" y="-20" />
        </Anchors>
        <Scripts>
            <OnLoad function="OtherViewToggle_SetText" />
            <OnClick function="OtherViewToggle_Click" />

        </Scripts>
    </Button>
</Ui>