<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <FontFamily name="CharactersFontFamily" virtual="true">
        <Member alphabet="roman">
            <Font font="Fonts\MORPHEUS.ttf" height="12"/>
        </Member>
        <Member alphabet="korean">
            <Font font="Fonts\K_Pagetext.ttf" height="12" spacing="8"/>
        </Member>
        <Member alphabet="simplifiedchinese">
            <Font font="Fonts\ARKai_T.ttf" height="12"/>
        </Member>
        <Member alphabet="traditionalchinese">
            <Font font="Fonts\blei00d.ttf" height="12"/>
        </Member>
        <Member alphabet="russian">
            <Font font="Fonts\MORPHEUS_CYR.TTF" height="12"/>
        </Member>
    </FontFamily>

    <Font name="CharactersFont" inherits="CharactersFontFamily" virtual="true">
        <Shadow>
            <Offset>
                <AbsDimension x="1" y="-1"/>
            </Offset>
            <Color r="0" g="0" b="0"/>
        </Shadow>
        <Color r="1" g=".82" b="0"/>
    </Font>

    <Frame name="Characters" parent="OtherView">
        <Size x="800" y="600"/>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Text" inherits="CharactersFont" justifyH="CENTER" text="Hello">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>

        </Frames>
    </Frame>
</Ui>