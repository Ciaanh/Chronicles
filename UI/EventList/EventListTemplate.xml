<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">
    <Script file="EventListTemplate.lua"/>

    <Frame name="EventListTitleTemplate" mixin="EventListTitleMixin" virtual="true">
        <Size x="50" y="30"/>
        <Anchors>
            <Anchor point="TOPLEFT"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="BlackBG" setAllPoints="true" alpha="0.5">
                    <Color r="0.0" g="125.0" b="0.0"/>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="Text" inherits="SystemFont_Huge4" setAllPoints="true" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                    <Color color="WHITE_FONT_COLOR" />
                </FontString>
            </Layer>
        </Layers>
    </Frame>

    <Button name="EventListItemTemplate" mixin="EventListItemMixin" virtual="true">
        <Size x="50" y="30"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="BlackBG" setAllPoints="true" alpha="0.5">
                    <Color r="255.0" g="0.0" b="0.0"/>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="Text" inherits="SystemFont_Med3" setAllPoints="true" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="TOPLEFT" />
                        <Anchor point="BOTTOMRIGHT"/>
                    </Anchors>
                    <Color color="WHITE_FONT_COLOR" />
                </FontString>
            </Layer>
        </Layers>
        <Scripts>

            <OnClick method="OnClick"/>
        </Scripts>
    </Button>

