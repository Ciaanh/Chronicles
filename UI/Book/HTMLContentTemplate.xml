<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">

    <Script file="HTMLContentTemplate.lua"/>

    <!-- =============================================================================================
    NEW HTML CONTENT TEMPLATE
    ============================================================================================= 
    
    Single HTML container for the new Chronicles book system.
    Displays complete HTML documents generated by NewHTMLBuilder.
    
    This replaces the multi-template system with a unified approach where all content types
    (events, characters, factions) are displayed as complete HTML documents in a single container.
    
    FEATURES:
    - Single template for all content types
    - Complete HTML document display
    - Automatic height adjustment
    - Scroll support for long content
    - Error handling and fallback display
    - Debug and development support
    
    USAGE:
    The template expects elementData with:
    - htmlContent: Complete HTML document string
    - title: Content title for reference
    - entity: Original entity data (optional, for debugging)
    
    ============================================================================================= -->

    <Frame name="HTMLContentTemplate" mixin="HTMLContentMixin" virtual="true">
        <Size x="500" y="550"/>
        <!-- Dynamic height, will be adjusted based on content -->
        <Anchors>
            <Anchor point="TOPLEFT"/>
        </Anchors>

        <Frames>
            <!-- Main scroll frame for HTML content -->
            <ScrollFrame parentKey="ScrollFrame" mixin="ScrollFrameMixin" enableMouse="false">
                <KeyValues>
                    <KeyValue key="scrollOnMouse" value="true" type="boolean"/>
                    <KeyValue key="scrollBarHideIfUnscrollable" value="true" type="boolean"/>
                    <KeyValue key="scrollBarX" value="14" type="number"/>
                    <KeyValue key="scrollBarTopY" value="-25" type="number"/>
                    <KeyValue key="scrollBarBottomY" value="25" type="number"/>
                </KeyValues>
                <Size x="500" y="520"/>
                <Anchors>
                    <Anchor point="TOPLEFT" y="-20"/>
                </Anchors>

                <ScrollChild>
                    <SimpleHTML parentKey="HTML" resizeToFitContents="true" justifyH="LEFT">
                        <Size x="500"/>
                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                        </Anchors>
                        <FontString inherits="ChroniclesFontFamily_Text_Medium">
                            <Color color="SPELLBOOK_FONT_COLOR"/>
                        </FontString>
                    </SimpleHTML>
                </ScrollChild>

                <Scripts>
                    <OnLoad method="OnLoad"/>
                </Scripts>
            </ScrollFrame>
        </Frames>
    </Frame>

</Ui>
