<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">
    <Script file="CoverPage.lua"/>

    <!-- Cover Page Template for Characters and Factions -->
    <Frame name="CoverPageTemplate" mixin="CoverPageMixin" virtual="true">
        <Size x="$parent.viewWidth" y="550"/>
        <Anchors>
            <Anchor point="TOPLEFT"/>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">

                <!-- Portrait Frame -->
                <Texture parentKey="PortraitFrame" file="Interface\CharacterFrame\CharacterFramePortrait">
                    <Size x="140" y="140"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="0" y="-100"/>
                    </Anchors>
                </Texture>
                <!-- Portrait -->
                <Texture parentKey="Portrait">
                    <Size x="128" y="128"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.PortraitFrame" x="0" y="0"/>
                    </Anchors>
                    <TexCoords left="0" right="1" top="0" bottom="1"/>
                </Texture>
                <!-- Entity Name (Title) -->
                <FontString parentKey="Name" inherits="SystemFont_Huge1" justifyH="CENTER">
                    <Size x="420" y="0"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-30"/>
                    </Anchors>
                    <Color color="SPELLBOOK_FONT_COLOR"/>
                </FontString>
                <!-- Divider -->
                <Texture parentKey="Divider" atlas="spellbook-divider" useAtlasSize="false">
                    <Size x="400" y="20"/>
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.Name" relativePoint="BOTTOM" x="0" y="-10"/>
                    </Anchors>
                </Texture>
                <!-- Author Signature -->
                <FontString parentKey="Author" inherits="ChroniclesFontFamily_Text_Medium" justifyH="RIGHT">
                    <Size x="$parent.viewWidth" y="25"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="-20" y="20"/>
                    </Anchors>
                    <Color color="SPELLBOOK_FONT_COLOR"/>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <!-- Content Area (can be positioned differently based on portrait presence) -->
            <Frame parentKey="ContentArea">
                <Size x="400" y="300"/>
                <Anchors>
                    <!-- <Anchor point="TOP" relativeKey="$parent.Divider" relativePoint="BOTTOM" x="-60" y="-15"/> -->
                    <Anchor point="BOTTOM" />
                </Anchors>
                <Frames>
                    <ScrollFrame parentKey="DescriptionScrollFrame" mixin="ScrollFrameMixin" enableMouse="false">
                        <KeyValues>
                            <KeyValue key="scrollOnMouse" value="true" type="boolean"/>
                            <KeyValue key="scrollBarHideIfUnscrollable" value="true" type="boolean"/>
                            <KeyValue key="scrollBarX" value="14" type="number"/>
                            <KeyValue key="scrollBarTopY" value="-25" type="number"/>
                            <KeyValue key="scrollBarBottomY" value="25" type="number"/>
                        </KeyValues>
                        <Anchors>
                            <Anchor point="TOPLEFT" />
                            <Anchor point="BOTTOMRIGHT" />
                        </Anchors>
                        <ScrollChild>
                            <SimpleHTML parentKey="HTML" resizeToFitContents="true" justifyH="LEFT">
                                <Size x="400"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" />
                                </Anchors>
                                <FontString inherits="ChroniclesFontFamily_Text_Medium">
                                    <Color color="SPELLBOOK_FONT_COLOR" />
                                </FontString>
                            </SimpleHTML>
                        </ScrollChild>
                        <Scripts>
                            <OnLoad method="OnLoad"/>
                        </Scripts>
                    </ScrollFrame>
                </Frames>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>
</Ui>
