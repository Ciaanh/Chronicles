<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">
    <Script file="CoverWithContent.lua"/>

    <!-- Cover Page with Integrated Content -->
    <Frame name="CoverWithContentTemplate" mixin="CoverWithContentMixin" virtual="true">
        <Size x="$parent.viewWidth" y="550"/>
        <Anchors>
            <Anchor point="TOPLEFT"/>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <!-- Entity Name (Title) -->
                <FontString parentKey="Name" inherits="SystemFont_Huge1" justifyH="CENTER">
                    <Size x="420" y="0"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-30"/>
                    </Anchors>
                    <Color color="SPELLBOOK_FONT_COLOR"/>
                </FontString>
                <!-- Author Signature -->
                <FontString parentKey="Author" inherits="ChroniclesFontFamily_Text_Medium" justifyH="RIGHT">
                    <Size x="$parent.viewWidth" y="25"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="-20" y="20"/>
                    </Anchors>
                    <Color color="SPELLBOOK_FONT_COLOR"/>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <!-- Unified content area with portrait integration -->
            <Frame parentKey="ContentFrame" inherits="UnifiedContentTemplate">
                <Anchors>
                    <Anchor point="TOP" relativeKey="$parent.Name" relativePoint="BOTTOM" x="0" y="-20"/>
                    <Anchor point="BOTTOM" relativeKey="$parent.Author" relativePoint="TOP" x="0" y="10"/>
                    <Anchor point="LEFT" x="20"/>
                    <Anchor point="RIGHT" x="-20"/>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>
</Ui>
