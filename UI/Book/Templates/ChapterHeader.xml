<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">
    <Script file="ChapterHeader.lua"/>

    <!-- Chapter Header Template - Old format compatibility -->
    <Frame name="ChapterHeaderTemplate" mixin="ChapterHeaderMixin" virtual="true">
        <Size x="$parent.viewWidth" y="80"/>
        <Anchors>
            <Anchor point="TOPLEFT"/>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Title" inherits="SystemFont_Huge2" justifyH="CENTER">
                    <Size x="$parent.viewWidth" y="40"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-10"/>
                    </Anchors>
                    <Color color="SPELLBOOK_FONT_COLOR"/>
                </FontString>
                
                <Texture parentKey="Separator" atlas="spellbook-divider" useAtlasSize="false">
                    <Size x="300" y="8"/>
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.Title" relativePoint="BOTTOM" x="0" y="-10"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>
</Ui>
