<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <Frame name="MyCharacters" parent="MyJournalView" hidden="true">
        <Size x="740" y="540"/>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>

        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Name" inherits="ChroniclesFontLarge" justifyH="CENTER">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyJournalViewTitle" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>

            <Frame name="MyCharactersList" parentKey="List" inherits="BackdropTemplate">
                <Size x="200" y="530"/>
                <Anchors>
                    <Anchor point="TOPLEFT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" file="Interface\QuestionFrame\question-background" horizTile="true" vertTile="true">
                            <Anchors>
                                <Anchor point="TOP" y="-5"/>
                                <Anchor point="BOTTOM" y="5"/>
                                <Anchor point="LEFT" x="5"/>
                                <Anchor point="RIGHT" x="-5"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>

                <Frames>
                    <Frame name="MyCharactersListScrollFrame" parentKey="ScrollFrame">
                        <Size x="150" y="530" />
                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                        </Anchors>
                        <Frames>
                            <Frame name="MyCharactersListBlock1" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOPLEFT" x="15" y="-15" />
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharactersListBlock2" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyCharactersListBlock1" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharactersListBlock3" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyCharactersListBlock2" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharactersListBlock4" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyCharactersListBlock3" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharactersListBlock5" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyCharactersListBlock4" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharactersListBlock6" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyCharactersListBlock5" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharactersListBlock7" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyCharactersListBlock6" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharactersListBlock8" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyCharactersListBlock7" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharactersListBlock9" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyCharactersListBlock8" y="-5"/>
                                </Anchors>
                            </Frame>
                        </Frames>

                        <Scripts>
                            <OnMouseWheel>
                                MyCharactersListScrollFrame_OnMouseWheel(self, delta)
                            </OnMouseWheel>
                        </Scripts>
                    </Frame>

                    <Slider name="MyCharactersListScrollBar" parentKey="ScrollBar" inherits="MinimalScrollBarTemplate">
                        <Size x="20" y="470"/>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharactersListScrollFrame" x="15" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);

                                self.ScrollUpButton:SetScript(
                                    "OnClick",
                                    function(source) MyCharactersListPreviousButton_OnClick(source) end
                                );

                                self.ScrollDownButton:SetScript(
                                    "OnClick",
                                    function(source) MyCharactersListNextButton_OnClick(source) end
                                );

                                self.scrollStep = 1;
                            </OnLoad>
                            <OnValueChanged>
                                DisplayMyCharactersList(adjust_value(value, self.scrollStep));
                            </OnValueChanged>
                        </Scripts>
                    </Slider>

                    <Button name="MyCharactersListAddCharacter" inherits="UIPanelButtonTemplate">
                        <Size x="75" y="30"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyCharactersListScrollFrame" x="0" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyCharactersListAddCharacter_OnClick" />
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>

            <Frame name="MyCharactersDetails" parentKey="Details" inherits="BackdropTemplate">
                <Size x="540" y="530"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" file="Interface\QuestionFrame\question-background" horizTile="true" vertTile="true">
                            <Anchors>
                                <Anchor point="TOP" y="-5"/>
                                <Anchor point="BOTTOM" y="5"/>
                                <Anchor point="LEFT" x="5"/>
                                <Anchor point="RIGHT" x="-5"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>

                <Frames>
                    <Frame name="MyCharactersDetailsIdContainer">
                        <Size x="50" y="32" />
                        <Anchors>
                            <Anchor point="TOPLEFT" x="25" y="-25" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString name="MyCharactersDetailsIdLabel" inherits="EventDescriptionFont" justifyH="LEFT"/>

                                <FontString name="MyCharactersDetailsId" inherits="EventDescriptionFont" justifyH="LEFT">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharactersDetailsIdLabel" x="10"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                    </Frame>

                    <EditBox name="MyCharactersDetailsName" letters="0" inherits="InputBoxTemplate" autoFocus="false">
                        <Size x="250" y="32" />
                        <Anchors>
                            <Anchor point="TOPRIGHT" x="-25" y="-25" />
                        </Anchors>
                        <Scripts>
                            <OnEscapePressed function="EditBox_ClearFocus"/>
                            <OnLoad>
                            </OnLoad>
                        </Scripts>
                        <FontString inherits="EventDescriptionFontLight" />
                    </EditBox>

                    <Frame name="MyCharactersDetailsNameLabelContainer">
                        <Size x="70" y="32" />
                        <Anchors>
                            <Anchor point="RIGHT" relativePoint="LEFT" relativeTo="MyCharactersDetailsName" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString name="MyCharactersDetailsNameLabel" inherits="EventDescriptionFont" justifyH="LEFT"/>
                            </Layer>
                        </Layers>
                    </Frame>

                    <Frame name="MyCharactersDetailsTimelineLabelContainer">
                        <Size x="50" y="32" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyCharactersDetailsIdContainer" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString name="MyCharactersDetailsTimelineLabel" inherits="EventDescriptionFont" justifyH="LEFT"/>
                            </Layer>
                        </Layers>
                    </Frame>

                    <Frame name="MyCharactersDetailsTimelineDropDown" inherits="UIDropDownMenuTemplate" enableMouse="true">
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharactersDetailsTimelineLabel"/>
                        </Anchors>
                    </Frame>



                    <Frame name="MyCharactersDetailsBiographyLabelContainer">
                        <Size x="50" y="32" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyCharactersDetailsTimelineLabelContainer" y="0"/>
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString name="MyCharactersDetailsBiographyLabel" inherits="EventDescriptionFont" justifyH="LEFT"/>
                            </Layer>
                        </Layers>
                    </Frame>

                    <Frame name="MyCharactersDetailsBiographyContainer" inherits="BackdropTemplate">
                        <Size x="475" y="250" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyCharactersDetailsBiographyLabel" y="-5"/>
                        </Anchors>
                        <KeyValues>
                            <KeyValue key="backdropInfo" value="BACKDROP_TOOLTIP_8_8_1111" type="global"/>
                            <KeyValue key="backdropColor" value="BLACK_FONT_COLOR" type="global"/>
                            <KeyValue key="backdropColorAlpha" value="0.9" type="number"/>
                            <KeyValue key="backdropBorderColor" value="TOOLTIP_DEFAULT_COLOR" type="global"/>
                        </KeyValues>

                        <Frames>
                            <ScrollFrame name="MyCharactersDetailsBiographyScrollFrame" inherits="UIPanelScrollFrameTemplate">
                                <Anchors>
                                    <Anchor point="TOP" x="0" y="-5"/>
                                    <Anchor point="RIGHT" x="-5" y="0"/>
                                    <Anchor point="LEFT" x="5" y="0"/>
                                    <Anchor point="BOTTOM" x="0" y="5"/>
                                </Anchors>
                                <Scripts>
                                    <OnMouseDown>
								        MyCharactersDetailsBiography:SetFocus();
                                    </OnMouseDown>
                                </Scripts>
                                <ScrollChild>
                                    <EditBox name="MyCharactersDetailsBiography" letters="0" multiline="true" autoFocus="false">
                                        <Size x="450" y="180" />
                                        <Anchors>
                                            <Anchor point="CENTER" />
                                        </Anchors>
                                        <Scripts>
                                            <OnEscapePressed function="EditBox_ClearFocus"/>
                                        </Scripts>
                                        <FontString inherits="EventDescriptionFontLight" />
                                    </EditBox>
                                </ScrollChild>
                            </ScrollFrame>
                        </Frames>
                    </Frame>




                    <Frame name="MyCharacterFactionsLabelContainer">
                        <Size x="50" y="32" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyCharactersDetailsBiographyContainer" y="0"/>
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString name="MyCharacterFactionsLabel" inherits="EventDescriptionFont" justifyH="LEFT"/>
                            </Layer>
                        </Layers>
                    </Frame>

                    <Frame name="MyCharacterFactionsScrollFrame" parentKey="ScrollFrame">
                        <Size x="480" y="125" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyCharacterFactionsLabel" x="0" y="-5" />
                        </Anchors>
                        <Frames>
                            <Frame name="MyCharacterFactionsBlock1" inherits="TextListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOPLEFT" x="0" y="0"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharacterFactionsBlock2" inherits="TextListItemTemplate">
                                <Anchors>
                                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharacterFactionsBlock1" x="5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharacterFactionsBlock3" inherits="TextListItemTemplate">
                                <Anchors>
                                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharacterFactionsBlock2" x="5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharacterFactionsBlock4" inherits="TextListItemTemplate">
                                <Anchors>
                                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharacterFactionsBlock3" x="5"/>
                                </Anchors>
                            </Frame>


                            <Frame name="MyCharacterFactionsBlock5" inherits="TextListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyCharacterFactionsBlock1" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharacterFactionsBlock6" inherits="TextListItemTemplate">
                                <Anchors>
                                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharacterFactionsBlock5" x="5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharacterFactionsBlock7" inherits="TextListItemTemplate">
                                <Anchors>
                                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharacterFactionsBlock6" x="5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyCharacterFactionsBlock8" inherits="TextListItemTemplate">
                                <Anchors>
                                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharacterFactionsBlock7" x="5"/>
                                </Anchors>
                            </Frame>
                        </Frames>

                        <Scripts>
                            <OnMouseWheel>
                                        MyCharacterFactionsScrollFrame_OnMouseWheel(self, delta)
                            </OnMouseWheel>
                        </Scripts>
                    </Frame>

                    <Slider name="MyCharacterFactionsScrollBar" parentKey="ScrollBar" inherits="MinimalScrollBarTemplate">
                        <Size x="20" y="50" />
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharacterFactionsScrollFrame" x="-5" y="30" />
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                        self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);

                                        self.ScrollUpButton:SetScript(
                                            "OnClick",
                                            function(source) MyCharacterFactionsPrevious_OnClick(source) end
                                        );

                                        self.ScrollDownButton:SetScript(
                                            "OnClick",
                                            function(source) MyCharacterFactionsNext_OnClick(source) end
                                        );

                                        self.scrollStep = 1;
                            </OnLoad>
                            <OnValueChanged>
                                        MyCharacterChangeFactionsPage(adjust_value(value, self.scrollStep));
                            </OnValueChanged>
                        </Scripts>
                    </Slider>


                    <Button name="MyCharactersDetailsSaveButton" inherits="UIPanelButtonTemplate">
                        <Size x="50" y="30"/>
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" x="-20" y="20" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyCharactersDetailsSave_Click" />
                        </Scripts>
                    </Button>

                    <Button name="MyCharactersDetailsRemoveCharacter" inherits="UIPanelButtonTemplate">
                        <Size x="70" y="30"/>
                        <Anchors>
                            <Anchor point="TOPRIGHT" x="5" y="5" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyCharactersDetailsRemoveCharacter_OnClick" />
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>
        </Frames>
    </Frame>
</Ui>