<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">




    <Frame name="MyEventListItemTemplate" virtual="true" enableMouse="true">
        <Size x="150" y="50"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface\AddOns\Chronicles\Images\Event-Background">
                    <Size x="150" y="50"/>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                    <TexCoords left="0.0" right="1.0" top="0.0" bottom="1.0"/>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="Text" inherits="GameFontNormalSmall" justifyH="CENTER">
                    <Size x="130" y="35"/>
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter>
				GameTooltip:SetOwner(self, "ANCHOR_BOTTOMRIGHT", -5, 30);
				GameTooltip:SetText(self.event.yearStart, nil, nil, nil, nil, true);
            </OnEnter>
            <OnLeave>
				GameTooltip:Hide();
            </OnLeave>
        </Scripts>
    </Frame>


    <Frame name="MyEvents" parent="MyJournalView" hidden="true">
        <Size x="740" y="540"/>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>

        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Title" inherits="ChroniclesFontLarge" justifyH="CENTER">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyJournalViewTitle" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>

            <Frame name="MyEventsList" parentKey="List" inherits="BackdropTemplate">
                <Size x="200" y="530"/>
                <Anchors>
                    <Anchor point="TOPLEFT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" file="Interface\QuestionFrame\question-background" horizTile="true" vertTile="true">
                            <Anchors>
                                <Anchor point="TOP" y="-5"/>
                                <Anchor point="BOTTOM" y="5"/>
                                <Anchor point="LEFT" x="5"/>
                                <Anchor point="RIGHT" x="-5"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>

                <Frames>

                    <Frame name="MyEventListScrollFrame" parentKey="ScrollFrame">
                        <Size x="150" y="530" />
                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                        </Anchors>
                        <Frames>
                            <Frame name="MyEventListBlock1" inherits="MyEventListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOPLEFT" x="15" y="-15" />
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock2" inherits="MyEventListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock1" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock3" inherits="MyEventListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock2" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock4" inherits="MyEventListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock3" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock5" inherits="MyEventListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock4" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock6" inherits="MyEventListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock5" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock7" inherits="MyEventListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock6" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock8" inherits="MyEventListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock7" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock9" inherits="MyEventListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock8" y="-5"/>
                                </Anchors>
                            </Frame>
                        </Frames>

                        <Scripts>
                            <OnMouseWheel>
                                MyEventListScrollFrame_OnMouseWheel(self, delta)
                            </OnMouseWheel>
                        </Scripts>
                    </Frame>

                    <Slider name="MyEventListScrollBar" parentKey="ScrollBar" inherits="MinimalScrollBarTemplate">
                        <Size x="20" y="470"/>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventListScrollFrame" x="15" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);

                                self.ScrollUpButton:SetScript(
                                    "OnClick",
                                    function(source) MyEventListPreviousButton_OnClick(source) end
                                );

                                self.ScrollDownButton:SetScript(
                                    "OnClick",
                                    function(source) MyEventListNextButton_OnClick(source) end
                                );

                                self.scrollStep = 1;
                            </OnLoad>
                            <OnValueChanged>
                                DisplayMyEventList(adjust_value(value, self.scrollStep));
                            </OnValueChanged>
                        </Scripts>
                    </Slider>

                </Frames>

            </Frame>

            <Frame name="MyEventsDetails" parentKey="Details" inherits="BackdropTemplate">
                <Size x="540" y="530"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" file="Interface\QuestionFrame\question-background" horizTile="true" vertTile="true">
                            <Anchors>
                                <Anchor point="TOP" y="-5"/>
                                <Anchor point="BOTTOM" y="5"/>
                                <Anchor point="LEFT" x="5"/>
                                <Anchor point="RIGHT" x="-5"/>
                            </Anchors>
                        </Texture>
                    </Layer>

                    <Layer level="OVERLAY">
                        <FontString name="MyEventsDetailsIdLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Id :">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="25" y="-25" />
                            </Anchors>
                        </FontString>
                        <FontString name="MyEventsDetailsId" parentKey="Id" inherits="EventDescriptionFont" justifyH="CENTER">
                            <Anchors>
                                <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsIdLabel" x="10"/>
                            </Anchors>
                        </FontString>

                        <FontString name="MyEventsDetailsTitleLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Title :">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsIdLabel" y="-15"/>
                            </Anchors>
                        </FontString>


                        <FontString name="MyEventsDetailsYearStartLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Year start :">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsTitleLabel" y="-15"/>
                            </Anchors>
                        </FontString>

                        <FontString name="MyEventsDetailsYearEndLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Year end :">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsYearStartLabel" y="-15"/>
                            </Anchors>
                        </FontString>

                        <FontString name="MyEventsDetailsDescriptionsLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Description :">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsYearEndLabel" y="-30"/>
                            </Anchors>
                        </FontString>
                    </Layer>

                </Layers>
                <Frames>

                    <!-- 
                        id = 9,
                        label = "My event 9",
                        description = {"My event 9 label"},
                        yearStart = -2800,
                        yearEnd = -2800,
                        eventType = 2,
                        timeline = 2 
                    -->

                    <Frame name="MyEventTimelineDropDown" inherits="UIDropDownMenuTemplate" enableMouse="true" parentKey="TimelineDropDown">
                        <Anchors>
                            <Anchor point="TOPRIGHT" x="0" y="-15"/>
                        </Anchors>
                    </Frame>

                    <Frame name="MyEventTypeDropDown" inherits="UIDropDownMenuTemplate" enableMouse="true" parentKey="TypeDropDown">
                        <Anchors>
                            <Anchor point="RIGHT" relativePoint="LEFT" relativeTo="MyEventTimelineDropDown" x="0"/>
                        </Anchors>
                    </Frame>

                    <EditBox name="MyEventsDetailsTitle" parentKey="Title" letters="0" inherits="InputBoxTemplate" autoFocus="false">
                        <Size x="200" y="32" />
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsTitleLabel" x="10"/>
                        </Anchors>
                        <Scripts>
                            <OnEscapePressed function="EditBox_ClearFocus"/>
                            <OnLoad>
                            </OnLoad>
                        </Scripts>
                        <FontString inherits="EventDescriptionFontLight" />
                    </EditBox>



                    <!-- numeric="true" autoFocus="false" -->
                    <EditBox name="MyEventsDetailsYearStart" parentKey="YearStart" letters="15" inherits="InputBoxTemplate" autoFocus="false" numeric="true">
                        <Size x="100" y="32" />
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsYearStartLabel" x="10"/>
                        </Anchors>
                        <Scripts>
                            <OnEscapePressed function="EditBox_ClearFocus"/>
                            <OnLoad>
                            </OnLoad>
                        </Scripts>
                        <FontString inherits="EventDescriptionFontLight" />
                    </EditBox>

                    <EditBox name="MyEventsDetailsYearEnd" parentKey="YearEnd" letters="15" inherits="InputBoxTemplate" autoFocus="false" numeric="true">
                        <Size x="100" y="32" />
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsYearEndLabel" x="10"/>
                        </Anchors>
                        <Scripts>
                            <OnEscapePressed function="EditBox_ClearFocus"/>
                            <OnLoad>
                            </OnLoad>
                        </Scripts>
                        <FontString inherits="EventDescriptionFontLight" />
                    </EditBox>




                    <Frame name="MyEventsDetailsDescriptionContainer" inherits="BackdropTemplate">
                        <Size x="400" y="300" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsDescriptionsLabel" y="-5"/>
                        </Anchors>
                        <KeyValues>
                            <KeyValue key="backdropInfo" value="BACKDROP_TOOLTIP_8_8_1111" type="global"/>
                            <KeyValue key="backdropColor" value="BLACK_FONT_COLOR" type="global"/>
                            <KeyValue key="backdropColorAlpha" value="0.9" type="number"/>
                            <KeyValue key="backdropBorderColor" value="TOOLTIP_DEFAULT_COLOR" type="global"/>
                        </KeyValues>

                        <Frames>
                            <ScrollFrame name="MyEventsDetailsDescriptionScrollFrame" inherits="UIPanelScrollFrameTemplate">
                                <Anchors>
                                    <Anchor point="TOP" x="0" y="-5"/>
                                    <Anchor point="RIGHT" x="-5" y="0"/>
                                    <Anchor point="LEFT" x="5" y="0"/>
                                    <Anchor point="BOTTOM" x="0" y="5"/>
                                </Anchors>
                                <Scripts>
                                    <OnMouseDown>
								        MyEventsDetailsDescription:SetFocus();
                                    </OnMouseDown>
                                </Scripts>
                                <ScrollChild>
                                    <EditBox name="MyEventsDetailsDescription" letters="500" multiline="true" autoFocus="false">
                                        <Size x="390" y="290"/>
                                        <Anchors>
                                            <Anchor point="CENTER" />
                                        </Anchors>
                                        <Scripts>
                                            <OnEscapePressed function="EditBox_ClearFocus"/>
                                            <OnLoad>
                                            </OnLoad>
                                        </Scripts>
                                        <FontString inherits="EventDescriptionFontLight" />
                                    </EditBox>
                                </ScrollChild>
                            </ScrollFrame>
                        </Frames>
                    </Frame>


                    <Button parentKey="SaveButton" inherits="UIPanelButtonTemplate" Text="Save">
                        <Size x="50" y="30"/>
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" x="-20" y="20" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyEventSave_Click" />
                        </Scripts>
                    </Button>


                </Frames>

            </Frame>


        </Frames>

    </Frame>
</Ui>