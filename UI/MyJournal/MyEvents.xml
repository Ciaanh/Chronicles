                            <Frame name="MyEventListBlock3" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock2" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock4" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock3" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock5" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock4" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock6" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock5" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock7" inherits="LargeListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock6" y="-5"/>
                                </Anchors>
                            </Frame>
