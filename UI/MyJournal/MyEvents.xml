                        </Scripts>
                    </Frame>

                    <Slider parentKey="ScrollBar" inherits="MinimalScrollBarTemplate">
                        <Size x="20" y="470"/>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentScrollFrame" x="15" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);

                                self.ScrollUpButton:SetScript(
                                    "OnClick",
                                    function(source) MyEventListPreviousButton_OnClick(source) end
                                );

                                self.ScrollDownButton:SetScript(
                                    "OnClick",
                                    function(source) MyEventListNextButton_OnClick(source) end
                                );

                                self.scrollStep = 1;
                            </OnLoad>
                            <OnValueChanged>
                                DisplayMyEventsList(adjust_value(value, self.scrollStep));
                            </OnValueChanged>
                        </Scripts>
                    </Slider>

                    <Button parentKey="AddButton" inherits="UIPanelButtonTemplate">
                        <Size x="75" y="30"/>
