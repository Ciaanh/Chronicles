    <Frame name="MyEventsListItemTemplate" virtual="true" enableMouse="true">
        <Size x="150" y="50"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface\AddOns\Chronicles\Images\Event-Background">
                    <Size x="150" y="50"/>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                    <TexCoords left="0.0" right="1.0" top="0.0" bottom="1.0"/>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="Text" inherits="GameFontNormalSmall" justifyH="CENTER">
                    <Size x="130" y="35"/>
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter>
				GameTooltip:SetOwner(self, "ANCHOR_BOTTOMRIGHT", -5, 30);
				GameTooltip:SetText(self.event.yearStart, nil, nil, nil, nil, true);
            </OnEnter>
            <OnLeave>
				GameTooltip:Hide();
            </OnLeave>
        </Scripts>
    </Frame>


