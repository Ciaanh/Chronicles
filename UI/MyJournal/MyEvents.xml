<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">




    <Frame name="MyEventsListItemTemplate" virtual="true" enableMouse="true">
        <Size x="150" y="50"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface\AddOns\Chronicles\Images\Event-Background">
                    <Size x="150" y="50"/>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                    <TexCoords left="0.0" right="1.0" top="0.0" bottom="1.0"/>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="Text" inherits="GameFontNormalSmall" justifyH="CENTER">
                    <Size x="130" y="35"/>
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter>
				GameTooltip:SetOwner(self, "ANCHOR_BOTTOMRIGHT", -5, 30);
				GameTooltip:SetText(self.event.yearStart, nil, nil, nil, nil, true);
            </OnEnter>
            <OnLeave>
				GameTooltip:Hide();
            </OnLeave>
        </Scripts>
    </Frame>


    <Frame name="MyEvents" parent="MyJournalView" hidden="true">
        <Size x="740" y="540"/>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>

        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Title" inherits="ChroniclesFontLarge" justifyH="CENTER">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyJournalViewTitle" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>

            <Frame name="MyEventsList" parentKey="List" inherits="BackdropTemplate">
                <Size x="200" y="530"/>
                <Anchors>
                    <Anchor point="TOPLEFT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" file="Interface\QuestionFrame\question-background" horizTile="true" vertTile="true">
                            <Anchors>
                                <Anchor point="TOP" y="-5"/>
                                <Anchor point="BOTTOM" y="5"/>
                                <Anchor point="LEFT" x="5"/>
                                <Anchor point="RIGHT" x="-5"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>

                <Frames>
                    <Frame name="MyEventsListScrollFrame" parentKey="ScrollFrame">
                        <Size x="150" y="530" />
                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                        </Anchors>
                        <Frames>
                            <Frame name="MyEventListBlock1" inherits="MyEventsListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOPLEFT" x="15" y="-15" />
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock2" inherits="MyEventsListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock1" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock3" inherits="MyEventsListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock2" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock4" inherits="MyEventsListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock3" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock5" inherits="MyEventsListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock4" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock6" inherits="MyEventsListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock5" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock7" inherits="MyEventsListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock6" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock8" inherits="MyEventsListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock7" y="-5"/>
                                </Anchors>
                            </Frame>
                            <Frame name="MyEventListBlock9" inherits="MyEventsListItemTemplate">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventListBlock8" y="-5"/>
                                </Anchors>
                            </Frame>
                        </Frames>

                        <Scripts>
                            <OnMouseWheel>
                                MyEventsListScrollFrame_OnMouseWheel(self, delta)
                            </OnMouseWheel>
                        </Scripts>
                    </Frame>

                    <Slider name="MyEventsListScrollBar" parentKey="ScrollBar" inherits="MinimalScrollBarTemplate">
                        <Size x="20" y="470"/>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsListScrollFrame" x="15" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);

                                self.ScrollUpButton:SetScript(
                                    "OnClick",
                                    function(source) MyEventListPreviousButton_OnClick(source) end
                                );

                                self.ScrollDownButton:SetScript(
                                    "OnClick",
                                    function(source) MyEventListNextButton_OnClick(source) end
                                );

                                self.scrollStep = 1;
                            </OnLoad>
                            <OnValueChanged>
                                DisplayMyEventsList(adjust_value(value, self.scrollStep));
                            </OnValueChanged>
                        </Scripts>
                    </Slider>
                    
                    <Button name="MyEventsListAddEvent" inherits="UIPanelButtonTemplate" Text="Add event">
                        <Size x="75" y="30"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsListScrollFrame" x="0" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyEventsListAddEvent_OnClick" />
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>

            <Frame name="MyEventsDetails" parentKey="Details" inherits="BackdropTemplate">
                <Size x="540" y="530"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" file="Interface\QuestionFrame\question-background" horizTile="true" vertTile="true">
                            <Anchors>
                                <Anchor point="TOP" y="-5"/>
                                <Anchor point="BOTTOM" y="5"/>
                                <Anchor point="LEFT" x="5"/>
                                <Anchor point="RIGHT" x="-5"/>
                            </Anchors>
                        </Texture>
                    </Layer>

                    <Layer level="OVERLAY">
                        <FontString name="MyEventsDetailsIdLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Id :">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="25" y="-25" />
                            </Anchors>
                        </FontString>

                        <FontString name="MyEventsDetailsId" parentKey="Id" inherits="EventDescriptionFont" justifyH="CENTER">
                            <Anchors>
                                <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsIdLabel" x="10"/>
                            </Anchors>
                        </FontString>

                        <FontString name="MyEventsDetailsTitleLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Title :">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsIdLabel" y="-15"/>
                            </Anchors>
                        </FontString>

                        <FontString name="MyEventsDetailsYearStartLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Year start :">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsTitleLabel" y="-15"/>
                            </Anchors>
                        </FontString>

                        <FontString name="MyEventsDetailsYearEndLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Year end :">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsYearStartLabel" y="-15"/>
                            </Anchors>
                        </FontString>

                        <FontString name="MyEventsDetailsDescriptionsLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Description :">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsYearEndLabel" y="-30"/>
                            </Anchors>
                        </FontString>

                        <FontString name="MyEventsDetailsEventTypeLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Event type :">
                            <Anchors>
                                <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsIdLabel" x="250"/>
                            </Anchors>
                        </FontString>

                        <FontString name="MyEventsDetailsTimelineLabel" inherits="EventDescriptionFont" justifyH="CENTER" text="Timeline :">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsEventTypeLabel" y="-20"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>

                <Frames>
                    <Frame name="MyEventsDetailsTypeDropDown" inherits="UIDropDownMenuTemplate" enableMouse="true" parentKey="TypeDropDown">
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsEventTypeLabel" x="0" y="0"/>
                        </Anchors>
                    </Frame>

                    <Frame name="MyEventsDetailsTimelineDropDown" inherits="UIDropDownMenuTemplate" enableMouse="true" parentKey="TimelineDropDown">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsTypeDropDown" y="0"/>
                        </Anchors>
                    </Frame>

                    <EditBox name="MyEventsDetailsTitle" parentKey="Title" letters="0" inherits="InputBoxTemplate" autoFocus="false">
                        <Size x="200" y="32" />
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsTitleLabel" x="10"/>
                        </Anchors>
                        <Scripts>
                            <OnEscapePressed function="EditBox_ClearFocus"/>
                            <OnLoad>
                            </OnLoad>
                        </Scripts>
                        <FontString inherits="EventDescriptionFontLight" />
                    </EditBox>

                    <EditBox name="MyEventsDetailsYearStart" parentKey="YearStart" letters="15" inherits="InputBoxTemplate" autoFocus="false">
                        <Size x="100" y="32" />
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsYearStartLabel" x="10"/>
                        </Anchors>
                        <Scripts>
                            <OnEscapePressed function="EditBox_ClearFocus"/>
                            <OnLoad>
                            </OnLoad>
                        </Scripts>
                        <FontString inherits="EventDescriptionFontLight" />
                    </EditBox>

                    <EditBox name="MyEventsDetailsYearEnd" parentKey="YearEnd" letters="15" inherits="InputBoxTemplate" autoFocus="false">
                        <Size x="100" y="32" />
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsYearEndLabel" x="10"/>
                        </Anchors>
                        <Scripts>
                            <OnEscapePressed function="EditBox_ClearFocus"/>
                            <OnLoad>
                            </OnLoad>
                        </Scripts>
                        <FontString inherits="EventDescriptionFontLight" />
                    </EditBox>

                    <Frame name="MyEventsDetailsDescriptionContainer" inherits="BackdropTemplate">
                        <Size x="400" y="300" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsDescriptionsLabel" y="-5"/>
                        </Anchors>
                        <KeyValues>
                            <KeyValue key="backdropInfo" value="BACKDROP_TOOLTIP_8_8_1111" type="global"/>
                            <KeyValue key="backdropColor" value="BLACK_FONT_COLOR" type="global"/>
                            <KeyValue key="backdropColorAlpha" value="0.9" type="number"/>
                            <KeyValue key="backdropBorderColor" value="TOOLTIP_DEFAULT_COLOR" type="global"/>
                        </KeyValues>

                        <Frames>
                            <ScrollFrame name="MyEventsDetailsDescriptionScrollFrame" inherits="UIPanelScrollFrameTemplate">
                                <Anchors>
                                    <Anchor point="TOP" x="0" y="-5"/>
                                    <Anchor point="RIGHT" x="-5" y="0"/>
                                    <Anchor point="LEFT" x="5" y="0"/>
                                    <Anchor point="BOTTOM" x="0" y="5"/>
                                </Anchors>
                                <Scripts>
                                    <OnMouseDown>
								        MyEventsDetailsDescription:SetFocus();
                                    </OnMouseDown>
                                </Scripts>
                                <ScrollChild>
                                    <EditBox name="MyEventsDetailsDescription" letters="500" multiline="true" autoFocus="false">
                                        <Size x="390" y="290"/>
                                        <Anchors>
                                            <Anchor point="CENTER" />
                                        </Anchors>
                                        <Scripts>
                                            <OnEscapePressed function="EditBox_ClearFocus"/>
                                        </Scripts>
                                        <FontString inherits="EventDescriptionFontLight" />
                                    </EditBox>
                                </ScrollChild>
                            </ScrollFrame>
                        </Frames>
                    </Frame>

                    <Button name="MyEventsDetailsDescriptionPrevious">
                        <Size>
                            <AbsDimension x="32" y="32"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="MyEventsDetailsDescriptionContainer" x="0" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyEventsDetailsDescriptionPrevious_OnClick"/>
                        </Scripts>
                        <NormalTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Up"/>
                        <PushedTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Down"/>
                        <DisabledTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Disabled"/>
                        <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
                    </Button>

                    <Frame name="MyEventsDetailsDescriptionPagerContainer">
                        <Size x="50" y="32" />
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsDescriptionPrevious" x="0" y="0" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString name="MyEventsDetailsDescriptionPager" inherits="EventDescriptionFont" justifyH="CENTER">
                                    <Anchors>
                                        <Anchor point="CENTER"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                    </Frame>

                    <Button name="MyEventsDetailsDescriptionNext">
                        <Size>
                            <AbsDimension x="32" y="32"/>
                        </Size>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsDescriptionPrevious" x="50" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyEventsDetailsDescriptionNext_OnClick"/>
                        </Scripts>
                        <NormalTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Up"/>
                        <PushedTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Down"/>
                        <DisabledTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Disabled"/>
                        <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
                    </Button>

                    <Button name="MyEventsDetailsAddDescriptionPage" inherits="UIPanelButtonTemplate" Text="Add page">
                        <Size x="70" y="30"/>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsDescriptionNext" x="50" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyEventsDetailsAddDescriptionPage_OnClick" />
                        </Scripts>
                    </Button>

                    <Button name="MyEventsDetailsRemoveDescriptionPage" inherits="UIPanelButtonTemplate" Text="Remove last page">
                        <Size x="120" y="30"/>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsDetailsAddDescriptionPage" x="10" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyEventsDetailsRemoveDescriptionPage_OnClick" />
                        </Scripts>
                    </Button>

                    <Button name="MyEventsDetailsSaveButton" inherits="UIPanelButtonTemplate" Text="Save">
                        <Size x="50" y="30"/>
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" x="-20" y="20" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyEventsDetailsSave_Click" />
                        </Scripts>
                    </Button>


                    <Button name="MyEventsDetailsRemoveEvent" inherits="UIPanelButtonTemplate" Text="Remove event">
                        <Size x="125" y="30"/>
                        <Anchors>
                            <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="MyEventsDetailsSaveButton" x="0" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="MyEventsDetailsRemoveEvent_OnClick" />
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>
        </Frames>
    </Frame>
</Ui>