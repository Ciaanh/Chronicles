<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <Frame name="MyJournalView" parent="MainFrame" hidden="true">
        <Size x="800" y="600"/>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Title" inherits="ChroniclesFontLarge" justifyH="CENTER">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-10"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame name="MyEvents" inherits="ListDetailTemplate">
                <Anchors>
                    <Anchor point="LEFT" />
                </Anchors>
            </Frame>
            <Frame name="MyCharacters" inherits="ListDetailTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEvents" />
                </Anchors>
            </Frame>
            <Frame name="MyFactions" inherits="ListDetailTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharacters" />
                </Anchors>
            </Frame>

        </Frames>
    </Frame>
</Ui>