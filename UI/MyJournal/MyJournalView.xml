<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <Frame name="MyJournalView" parent="MainFrame" hidden="true">
        <Size x="800" y="600"/>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Title" inherits="ChroniclesFontLarge" justifyH="CENTER">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-10"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame name="MyEvents" inherits="ListDetailTemplate">
                <Anchors>
                    <Anchor point="CENTER" />
                </Anchors>
            </Frame>
            <Frame name="MyCharacters" inherits="ListDetailTemplate" hidden="true">
                <Anchors>
                    <Anchor point="CENTER" />
                </Anchors>
            </Frame>
            <Frame name="MyFactions" inherits="ListDetailTemplate" hidden="true">
                <Anchors>
                    <Anchor point="CENTER" />
                </Anchors>
            </Frame>



            <Button name="MyEventsTabButton" inherits="CharacterFrameTabButtonTemplate" parentKey="tab1" id="1">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT"></Anchor>
                </Anchors>
                <Scripts>
                    <OnClick function="MyEventsTabButton_Click"/>
                </Scripts>
            </Button>
            <Button name="MyCharactersTabButton" inherits="CharacterFrameTabButtonTemplate" parentKey="tab2" id="2">
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyEventsTabButton" x="5"></Anchor>
                </Anchors>
                <Scripts>
                    <OnClick function="MyCharactersTabButton_Click"/>
                </Scripts>
            </Button>
            <Button name="MyFactionsTabButton" inherits="CharacterFrameTabButtonTemplate" parentKey="tab3" id="3">
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MyCharactersTabButton" x="5"></Anchor>
                </Anchors>
                <Scripts>
                    <OnClick function="MyFactionsTabButton_Click"/>
                </Scripts>
            </Button>



        </Frames>
    </Frame>
    <Scripts>
        <OnLoad function="MyJournalView_OnLoad"/>
    </Scripts>
</Ui>