    <!-- Chronicles Gold - Medium -->
    <Font name="ChroniclesFontFamily_Shadow_Medium" inherits="ChroniclesFontFamily_Medium" virtual="true">
        <Shadow>
            <Offset>
                <AbsDimension x="1" y="-1"/>
            </Offset>
            <Color r="0" g="0" b="0"/>
        </Shadow>
        <Color r="1" g=".82" b="0"/>
    </Font>



