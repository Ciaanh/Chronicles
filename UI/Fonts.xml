                    <Color r="0" g="0" b="0"/>
                </Shadow>
            </Font>
        </Member>
        <Member alphabet="korean">
            <Font font="Fonts\2002.TTF" height="13">
                <Shadow x="1" y="-1">
                    <Color r="0" g="0" b="0"/>
