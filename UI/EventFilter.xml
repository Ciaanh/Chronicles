<Ui xmlns="http://www.blizzard.com/wow/ui/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">


    <Frame name="EventFilter" parent="MainFrame">
        <Anchors>
            <Anchor point="RIGHT" relativePoint="LEFT" x="0" y="0" />
        </Anchors>
        <Size>
            <AbsDimension x="128" y="200"/>
        </Size>


        <Frames>
            <Frame name="FilterContent">
                <Size x="128" y="200"/>
                <Anchors>
                    <Anchor point="CENTER" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture name="$parentTopRight" file="Interface\AddOns\Chronicles\Images\LateralTab">
                            <Size>
                                <AbsDimension x="112" y="20"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPRIGHT" x="3" y="0" relativePoint="TOPRIGHT"/>
                            </Anchors>
                            <TexCoords left="0.5" right="1.0" top="0" bottom="0.15625"/>
                        </Texture>
                        <Texture name="$parentTopLeft" file="Interface\AddOns\Chronicles\Images\LateralTab">
                            <Size>
                                <AbsDimension x="16" y="20"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPRIGHT" relativeTo="$parentTopRight" relativePoint="TOPLEFT"/>
                            </Anchors>
                            <TexCoords left="0" right="0.5" top="0" bottom="0.15625"/>
                        </Texture>

                        <Texture name="$parentMiddleLeft" file="Interface\AddOns\Chronicles\Images\LateralTab">
                            <Size>
                                <AbsDimension x="16" y="160"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentTopLeft" relativePoint="BOTTOM"/>
                            </Anchors>
                            <TexCoords left="0" right="0.5" top="0.15625" bottom="0.84375"/>
                        </Texture>

                        <Texture name="$parentMiddleRight" file="Interface\AddOns\Chronicles\Images\LateralTab">
                            <Size>
                                <AbsDimension x="112" y="160"/>
                            </Size>
                            <Anchors>
                                <Anchor point="LEFT" relativeTo="$parentMiddleLeft" relativePoint="RIGHT"/>
                            </Anchors>
                            <TexCoords left="0.5" right="1.0" top="0.15625" bottom="0.84375"/>
                        </Texture>

                        <Texture name="$parentBottomLeft" file="Interface\AddOns\Chronicles\Images\LateralTab">
                            <Size>
                                <AbsDimension x="16" y="20"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentMiddleLeft" relativePoint="BOTTOM"/>
                            </Anchors>
                            <TexCoords left="0" right="0.5" top="0.84375" bottom="1.0"/>
                        </Texture>
                        <Texture name="$parentBottomRight" file="Interface\AddOns\Chronicles\Images\LateralTab">
                            <Size>
                                <AbsDimension x="112" y="20"/>
                            </Size>
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativeTo="$parentBottomLeft" relativePoint="BOTTOMRIGHT"/>
                            </Anchors>
                            <TexCoords left="0.5" right="1.0" top="0.84375" bottom="1.0"/>
                        </Texture>
                    </Layer>
                </Layers>
                <Frames>
                    <Frame name="EventFilterScrollFrame" parentKey="ScrollFrame">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="0"/>
                            <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                        </Anchors>

                        <Frames>
                            <CheckButton name="EventFilterBlock1" inherits="InterfaceOptionsCheckButtonTemplate" checked="false">
                                <Anchors>
                                    <Anchor point="TOPLEFT" x="15" y="-15" />
                                </Anchors>
                            </CheckButton>
                            <CheckButton name="EventFilterBlock2" inherits="InterfaceOptionsCheckButtonTemplate" checked="false">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="EventFilterBlock1" y="-5"/>
                                </Anchors>
                            </CheckButton>
                            <CheckButton name="EventFilterBlock3" inherits="InterfaceOptionsCheckButtonTemplate" checked="false">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="EventFilterBlock2" y="-5"/>
                                </Anchors>
                            </CheckButton>
                            <CheckButton name="EventFilterBlock4" inherits="InterfaceOptionsCheckButtonTemplate" checked="false">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="EventFilterBlock3" y="-5"/>
                                </Anchors>
                            </CheckButton>
                            <CheckButton name="EventFilterBlock5" inherits="InterfaceOptionsCheckButtonTemplate" checked="false">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="EventFilterBlock4" y="-5"/>
                                </Anchors>
                            </CheckButton>
                            <CheckButton name="EventFilterBlock6" inherits="InterfaceOptionsCheckButtonTemplate" checked="false">
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="EventFilterBlock5" y="-5"/>
                                </Anchors>
                            </CheckButton>
                        </Frames>

                        <Scripts>
                            <OnMouseWheel>
                                EventFilterScrollFrame_OnMouseWheel(self, delta)
                            </OnMouseWheel>
                        </Scripts>
                    </Frame>

                    <Slider name="EventFilterScrollBar" parentKey="ScrollBar" orientation="VERTICAL" enableMouse="true" enableMouseWheel="true">
                        <Size x="25" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="EventFilterScrollFrame" x="-20" y="-35" />
                            <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" relativeTo="EventFilterScrollFrame" x="-20" y="20" />
                        </Anchors>
                        <Frames>

                            <Button name="EventFilterPreviousButton" parentKey="PreviousButton">
                                <Size x="25" y="30"/>
                                <Anchors>
                                    <Anchor point="BOTTOM" relativePoint="TOP" relativeTo="EventFilterScrollBar" y="-3" />
                                </Anchors>
                                <NormalTexture parentKey="Normal" file="Interface\Buttons\UI-ScrollBar-ScrollUpButton-Up"/>
                                <PushedTexture parentKey="Pushed" file="Interface\Buttons\UI-ScrollBar-ScrollUpButton-Down"/>
                                <DisabledTexture parentKey="Disabled" file="Interface\Buttons\UI-ScrollBar-ScrollUpButton-Disabled"/>
                                <HighlightTexture parentKey="Highlight" file="Interface\Buttons\UI-ScrollBar-ScrollUpButton-Highlight" alphaMode="ADD"/>
                                <Scripts>
                                    <OnClick function="EventFilterPreviousButton_OnClick"/>
                                </Scripts>
                            </Button>

                            <Button name="EventFilterNextButton" parentKey="NextButton">
                                <Size x="25" y="30"/>
                                <Anchors>
                                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="EventFilterScrollBar" y="18" />
                                </Anchors>
                                <NormalTexture parentKey="Normal" file="Interface\Buttons\UI-ScrollBar-ScrollDownButton-Up"/>
                                <PushedTexture parentKey="Pushed" file="Interface\Buttons\UI-ScrollBar-ScrollDownButton-Down"/>
                                <DisabledTexture parentKey="Disabled" file="Interface\Buttons\UI-ScrollBar-ScrollDownButton-Disabled"/>
                                <HighlightTexture parentKey="Highlight" file="Interface\Buttons\UI-ScrollBar-ScrollDownButton-Highlight" alphaMode="ADD"/>
                                <Scripts>
                                    <OnClick function="EventFilterNextButton_OnClick"/>
                                </Scripts>
                            </Button>

                        </Frames>
                        <Scripts>
                            <OnLoad>
                        self:SetBackdrop({
                            bgFile = "Interface/Tooltips/UI-Tooltip-Background",
                            tile = true,
                            tileSize = 16,
                            insets = { left = 6, right = 6, top = 0, bottom = 17 },
                        });
                        self:SetBackdropColor(0.9, 0.75, 0.49, 1);
                            </OnLoad>
                        </Scripts>
                        <ThumbTexture name="EventFilterThumbTexture" parentKey="ThumbTexture" file="Interface\Buttons\UI-ScrollBar-Knob">
                            <Size x="18" y="24"/>
                            <TexCoords left="0.20" right="0.80" top="0.125" bottom="0.875"/>
                        </ThumbTexture>
                    </Slider>
                </Frames>




                <Scripts>
                    <OnLoad>
                        FilterContent:Hide()
                    </OnLoad>
                </Scripts>
            </Frame>

            <Button name="EventFilterToggle" inherits="UIPanelButtonTemplate">
                <Size x="20" y="20"/>
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" x="12" y="80"/>
                </Anchors>
                <Scripts>
                    <OnLoad function="EventFilter_InitToggle" />
                    <OnClick function="EventFilter_Toggle" />
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_BOTTOMRIGHT", -5, 30);
                        GameTooltip:SetText("Toggle event filters", nil, nil, nil, nil, true);
                    </OnEnter>
                    <OnLeave>
				        GameTooltip:Hide();
                    </OnLeave>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>