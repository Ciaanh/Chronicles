<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">


    <Button name="UIPanelScrollLeftButtonTemplate" virtual="true">
		<Size x="18" y="16"/>
		<NormalTexture parentKey="Normal" inherits="UIPanelScrollBarButton" file="Interface\Buttons\UI-ScrollBar-ScrollLeftButton-Up"/>
		<PushedTexture parentKey="Pushed" inherits="UIPanelScrollBarButton" file="Interface\Buttons\UI-ScrollBar-ScrollLeftButton-Down"/>
		<DisabledTexture parentKey="Disabled" inherits="UIPanelScrollBarButton" file="Interface\Buttons\UI-ScrollBar-ScrollLeftButton-Disabled"/>
		<HighlightTexture parentKey="Highlight" inherits="UIPanelScrollBarButton" file="Interface\Buttons\UI-ScrollBar-ScrollLeftButton-Highlight" alphaMode="ADD"/>
	</Button>

	<Button name="UIPanelScrollRightButtonTemplate" virtual="true">
		<Size x="18" y="16"/>
		<NormalTexture parentKey="Normal" inherits="UIPanelScrollBarButton" file="Interface\Buttons\UI-ScrollBar-ScrollRightButton-Up"/>
		<PushedTexture parentKey="Pushed" inherits="UIPanelScrollBarButton" file="Interface\Buttons\UI-ScrollBar-ScrollRightButton-Down"/>
		<DisabledTexture parentKey="Disabled" inherits="UIPanelScrollBarButton" file="Interface\Buttons\UI-ScrollBar-ScrollRightButton-Disabled"/>
		<HighlightTexture parentKey="Highlight" inherits="UIPanelScrollBarButton" file="Interface\Buttons\UI-ScrollBar-ScrollRightButton-Highlight" alphaMode="ADD"/>
	</Button>

    <Slider name="UIHorizontalPanelScrollBarTemplate" virtual="true">
		<Size x="16" y="0"/>
		<Frames>
			<Button name="$parentScrollUpButton" parentKey="ScrollUpButton" inherits="UIPanelScrollLeftButtonTemplate">
				<Anchors>
					<Anchor point="BOTTOM" relativePoint="TOP"/>
				</Anchors>
				<Scripts>
					<OnClick function="UIPanelScrollBarScrollUpButton_OnClick"/>
				</Scripts>
			</Button>
			<Button name="$parentScrollDownButton" parentKey="ScrollDownButton" inherits="UIPanelScrollRightButtonTemplate">
				<Anchors>
					<Anchor point="TOP" relativePoint="BOTTOM"/>
				</Anchors>
				<Scripts>
					<OnClick function="UIPanelScrollBarScrollDownButton_OnClick"/>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnValueChanged function="UIPanelScrollBar_OnValueChanged"/>
		</Scripts>
		<ThumbTexture name="$parentThumbTexture" parentKey="ThumbTexture" inherits="UIPanelScrollBarButton" file="Interface\Buttons\UI-ScrollBar-Knob">
			<Size x="18" y="24"/>
			<TexCoords left="0.20" right="0.80" top="0.125" bottom="0.875"/>
		</ThumbTexture>
	</Slider>

    
</Ui>